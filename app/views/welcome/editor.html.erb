<div class="container-fluid editor row no-gutters">
  <div class="col-sm-12 col-md-3 col-lg-2 menu-list">
    <nav>
      <ul>
        <li><a href="">Logo</a></li>
        <li><a href="">Boards</a></li>
        <li><%= link_to('Perfil', user_id_path(current_user), :method => :delete) %></li>
        <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %> </li>
      </ul>
    </nav>
  </div>
  <div class="col-sm-12 col-md-9 col-lg-10 main-editor">
    <header>
      <h2>
      <%if !@Task.parent.nil? %>
        <%= link_to editor_task_path(@Task.parent.id) do %>
          <i style="font-size: 16px;  position: relative;top: -2px;left: -10px;" class="fa fa-chevron-left"></i>
        <% end %>
      <% end %>


      <a><%= @Task.title %></a>
      
      <a>
        <span class="header-sub">24h</span>
      </a>
      </h2>
      
      
        <% 
        s = []
        taskParent = @Task
        while !taskParent.parent.nil?
          s.push(link_to taskParent.parent.title, editor_task_path(taskParent.parent.id))
        
          taskParent = taskParent.parent
         end 
         %>

         <% if s.length != 0 %>

          <ol class="breadcrumb">

         <% while s.length != 0
          %>
          <li>
            <%= s.pop() %>
          </li>
         <% end %>
      </ol>
   <% end %>

    </header>
    <section class="container">
      <div class="timeline-detail row">
      <%

      if @Task.children.length != 0
        x = 12/@Task.children.length 
      else
        x = 12
      end

      for i in 0..@Task.children.length-1  %>

      <div class="col-sm-<%= x %> col-md-<%= x %> ">
        <i class="fa fa-check-circle checked">&nbsp;</i>
          <h3>
            <%= link_to taskParent.children[i].title, editor_task_path(taskParent.children[i].id) %>
          </h3>

          <ul class="item-tasks-list">
            <li><input type="text" id="nova" placeholder="PrÃ³ximas Tarefas..."></input></li>            
            <li><a>Filho.Filho.Title</a></li>
            <li><a href="">Compose Database</a></li>
            <li><a href="">Image Reconizition</a></li>
            <li><a href="">Natural Language</a></li>            
          </ul>
        </div>
      <% end %>
      </div>
    </section>
  </div>
</div>